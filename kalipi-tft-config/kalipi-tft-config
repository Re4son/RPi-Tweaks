    date=`date`
    overlay="dtoverlay=pitft35-resistive,rotate=${ROTATION},speed=20000000,fps=20"
    cat >> /boot/config.txt <<EOF
# --- added by re4son-pi-tft-setup $date ---
dtparam=spi=on
dtparam=i2c1=on
dtparam=i2c_arm=on
