        return 0
    elif [ $RET -eq 0 ]; then
        case "$SCREEN" in
            kedei35*) do_rotation_menu "ROT090 90" && do_homedir_menu && do_confirm_menu $SCREEN ;;
            *) whiptail --msgbox "Program error: unrecognized option" 20 60 1 ;;
        esac || whiptail --msgbox "There was an error running option $SCREEN" 20 60 1
    fi
}

